# AerospaceMenubar Configuration File
#
# Place this file at one of these locations:
#   - ~/.aerospacebar.toml
#   - ~/.config/aerospacebar/aerospacebar.toml

# Path to the aerospace/hyprspace binary
# Supports tilde expansion (~)
# Default: /usr/local/bin/hyprspace
aerospace-path = "/usr/local/bin/hyprspace"

# Position of the menubar
# Options: "top", "bottom", "left", "right"
# Default: "top"
bar-position = "top"

# Size of the menubar (height for horizontal, width for vertical)
# Default: 25 for horizontal (top/bottom), 30 for vertical (left/right)
bar-size = 25

# Polling interval for workspace/window updates (in milliseconds)
# Lower values = more responsive, higher CPU usage
# Higher values = better battery life, less responsive
# Minimum: 100ms
# Default: 300ms
aerospace-poll-interval = 300
